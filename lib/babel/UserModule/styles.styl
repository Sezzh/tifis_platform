.header
  box-shadow 0 8px 16px rgba(0, 0, 0, 0.25)
  position fixed
  display flex
  justify-content space-between
  align-items strech
  top 0
  left 0
  right 0
  z-index 1
  width 100%
  height 3.75rem
  overflow hidden
  transition background .5s ease-in-out
  &__name-project
    text-align center
    font-family mainFontFamily
    margin 0 .5rem
    line-height 3.75rem
    padding 0
    text-decoration none
    z-index 2
    font-size 1.7rem
    color brightFontColor
    position relative
  &--background
    background-image url(schoolBackground)
    background-position center
    background-size cover
    &:before
      background-color rgba(4,4,4,.5) //darkBackgroundColor
      content ""
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
  &__language-btn
    z-index 2
    background-color inherit
    border none
    box-sizing border-box
    padding 0 1.5rem
    brightGlassEffect()
    &__flag
      border-radius 50%
      font-size 1.5rem
      box-shadow 0px 0px 2px darkFontColor

.language-container
  raisedEffect()
  background-color darkBackgroundColor
  padding .5rem .25rem
  position fixed
  z-index 3
  top 0
  right 0
  border-radius 0 0 0 .4rem
  transform translateX(100%)
  transition transform .2s ease
  overflow hidden
  &__title
    font-size 1.2rem
    margin 1rem
    font-family mainFontFamily
    color brightFontColor
    text-transform capitalize
  &__list
    padding 0
    margin 0
    &__item
      list-style-type none
      margin 0
      display block
      padding 0
      &__btn
        margin 1rem auto
        display block
        padding 0
        font-size 2rem
        background-color inherit
        width 4rem
        height 4rem
        border none
        text-transform uppercase
        color brightFontColor
        border-radius 50%
        &__flag-container
          border-radius 50%
          font-size 2rem

.main-login-container
  width 100%
  height auto
  display flex
  flex-wrap wrap
  overflow hidden
  margin-top 3.75rem
  &__section
    display flex
    flex-wrap wrap
    width 100%
    background-color darkBackgroundColor
    overflow hidden
    position relative
    &__phrase
      font-family mainFontFamily
      color brightFontColor
      font-size 1.2rem
      line-height 1.4rem
      width 80%
      margin 1rem auto .5rem auto
      raisedEffect()
    &__button-container
      width 50%
      background-image url(studentBackgroundImg)
      background-position center
      background-size cover
      overflow hidden
      transition width .2s ease-in-out
      &:nth-child(odd)
        background-image url(professorBackgroundImg)
    &__form-container
      width 100%
      max-height 0
      overflow hidden
      transition all .5s ease-in-out
      &__registry-form
        margin 1rem auto 1rem auto
        width 90%
        overflow hidden
        raisedEffect(0)
        &__mdl-textfield
          display block
          text-transform capitalize
          width 90%
          margin 0 auto
        &__mdl-button
          display block
          margin 0 5% 1rem auto
        &__title
          display block
          text-transform capitalize
          margin 0 auto
          width 90%
          padding-top 1rem
          font-size 1.1rem
          font-family mainFontFamily
          color brightFontColor
        &__error-container
          width 100%
          font-size 1.1rem
          margin 1rem 0 0 0
          color brightFontColor
          &__msg
            transition height .2s ease-in-out
    &__login-form
      margin 1rem auto
      width 90%
      overflow hidden
      raisedEffect(0)
      &:first-child
        padding-top 1rem
      &__mdl-textfield
        text-transform capitalize
        display block
        width 90%
        margin .25rem auto
      &__mdl-button
        display block
        padding 0 4rem
        margin .5rem auto 2rem auto

.login-error
  background-color purple
  color brightFontColor
  overflow hidden
  &__title
    font-size 1rem
    padding .25rem 0
    font-family mainFontFamily
    margin 0 auto
    width 90%
    text-align center

.footer
  background-color darkBackgroundColor
  color brightFontColor
  &__section
    width 90%
    margin 0 auto
    &__wrapper
      width 100%
      display flex
      align-items center
      &__icon
        color brightFontColor
        margin-right .5rem
      &__title
        padding 0
        font-size 1.7rem
        font-family mainFontFamily
        margin 0
    &__list
      margin .25rem 0
      &__item
        padding .1rem 0
        &__link
          font-size 1rem
          text-decoration none
          color brightFontColor

//break points

@media (min-width 53rem)
  .main-login-container
    &__section
      &__login-form
        width 30rem
      &__form-container
        &__registry-form
          &__mdl-textfield
            display inline-block
            vertical-align bottom
            width 30%
            margin-left 10%
          &__mdl-button
            display inline-block
            vertical-align bottom
            margin 0 0 1rem 10%
