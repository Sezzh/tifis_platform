.period-section
  background-color appBackgroundGrey
  width 100%
  &__list
    margin 0
    padding 0
    width 100%
    &__item
      padding 0
      width 100%
      box-sizing border-box
      list-style-type none
      border-bottom 1px solid statusBarGrey
      &:last-child
        border-bottom none
      &__link
        display block
        color primaryDarkFontColor
        width 100%
        padding 1rem
        font-size 1rem
        text-decoration none
        transition background-color .2s ease
        &:hover
          background-color appBarGrey
  &__new-button
    position absolute
    bottom 1rem
    right 1rem
  &__load-container
    width 100%
    margin 1rem 0
    text-align center



.period-new-form
  position fixed
  margin-top 3.5rem
  top 0
  bottom 0
  overflow-y scroll
  overflow-x hidden
  width 100%
  background-color cardsBackground
  transform translateY(100%)
  transition transform .5s ease
  &--visible
    transform translateY(0)
