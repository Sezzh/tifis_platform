.mdl-button
    &--big
        background-color rgba(4,4,4,.5)
        width 100%
        height 10rem
        color brightFontColor
        text-transform capitalize
        font-family mainFontFamily
        font-size 1.5rem
        border-radius 0
        padding 0
    &--form-activate
        color brightFontColor
        text-transform capitalize
        font-family mainFontFamily
        glassEffect()
    &--form-session
        color brightFontColor
        text-transform capitalize
        font-family mainFontFamily
        font-size 1rem
